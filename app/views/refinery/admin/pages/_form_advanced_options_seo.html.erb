<div class="hemisquare right_side">
  <h2><%= t('seo', :scope => 'seo_meta.form') %></h2>
	<div class='field'>
	  <span class='label_with_help'>
	   <%= f.label :browser_title, t('seo_override_title', :scope => 'seo_meta.form') %>
	   <%= refinery_help_tag t('seo_override_title_help', :scope => 'seo_meta.form')%>
	  </span>
	  <%= f.text_field :browser_title, :class => 'widest' %>
	</div>

	<div class='field'>
	  <span class='label_with_help'>
	   <%= f.label :meta_keywords %>
	   <%= refinery_help_tag "Meta keywords go here" %>
	  </span>
	  <%= f.text_area :meta_keywords, :class => 'widest', :rows => 7 %>
	</div>

	<div class='field'>
	  <span class='label_with_help'>
	   <%= f.label :meta_description, t('meta_description_title', :scope => 'seo_meta.form') %>
	   <%= refinery_help_tag t('meta_description_help', :scope => 'seo_meta.form') %>
	  </span>
	  <%= f.text_area :meta_description, :class => 'widest', :rows => 7 %>
	</div>

	<div class='field'>
      <span class='label_with_help'>
        <%= f.label :canonical_url, "Canonical Url" %>
        <%= refinery_help_tag "Canonical Url" %>
      </span>
      <%= f.text_field :canonical_url, :class => 'widest' %>
    </div>

    <div class='field'>
      <span class='label_with_help'>
        <%= f.label :hreflang_url, "HrefLang Url (En-Nz)" %>
        <%= refinery_help_tag "HrefLang Url (En-Nz)" %>
      </span>
      <%= f.text_field :hreflang_url, :class => 'widest' %>
    </div>

</div>
