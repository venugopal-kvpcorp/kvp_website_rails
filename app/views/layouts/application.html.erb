<!DOCTYPE html>
<html class="no-js" lang="en-US">
  <%= render 'layouts/head' %>

<body>

<div id="wrap">
  <%= render 'layouts/header' %>
<%= yield %>
  <%= render 'layouts/footer' %>
</div>


  	<!-- Modernizr -->
	<script src="assets/javascripts/modernizr.js"></script>

	<!-- jQuery -->
	<script src="assets/javascripts/jquery-1.11.1.min.js"></script>

	<!-- Owl carousel -->
    <script src="assets/javascripts/owl.carousel.min.js"></script>

	<!-- Bootstrap Plagins -->
	<script src="assets/javascripts/bootstrap.min.js"></script>

	<!-- Dropdown menu if screen < 650px -->
	<script src="assets/javascripts/jquery.slicknav.min.js"></script>
	
	<!-- Fixed Dropdown menu if scroll -->
	<script src="assets/javascripts/jquery-scrolltofixed-min.js" type="text/javascript"></script>

	<!-- jQuery -->
	<script src="assets/javascripts/jquery-1.7.2.min.js"></script>

	<!-- Animation offset -->
	<script src="assets/javascripts/wow.js"></script>

	<!-- Layout Style -->
	<script src="assets/javascripts/layout.js"></script>

	<!-- Parallax -->
	<script type="text/javascript" src="assets/javascripts/jquery.parallax-1.1.3.js"></script>

	<!-- Validate contact form -->
	<script type="text/javascript" src="assets/javascripts/send-mail.js"></script>

   	<script src="assets/javascripts/jquery.validate.js"></script>


	<!-- Other scripts -->
	<script type="text/javascript" src="assets/javascripts/script.js"></script>

	<script type="text/javascript">
		jQuery.noConflict()( function($){
			$(document).ready(function(){
				$('.about-numbers').parallax("100%", 0.25);
				$('.callout-2').parallax("20%", 0.25);
			});
		});
	</script>

	<!--Preaty Photo-->
	<script src="assets/javascripts/jquery.prettyPhoto.js" type="text/javascript"></script>

	<!-- Other scripts -->
	<script type="text/javascript" src="assets/javascripts/script.js"></script>

	<!-- PrettyPhoto -->
	<script type="text/javascript">
	jQuery.noConflict()( function($){
		$("a[data-gal^='prettyPhoto']").prettyPhoto();
	});
	</script>
	<!-- and PrettyPhoto -->

  	<!-- SLIDER REVOLUTION 4.x SCRIPTS  -->
    <script type="text/javascript" src="assets/javascripts/jquery.themepunch.tools.min.js"></script>
    <script type="text/javascript" src="assets/javascripts/jquery.themepunch.revolution.min.js"></script>
	<!-- REVOLUTION SLIDER -->
	<script type="text/javascript">

		var revapi;

		jQuery(document).ready(function() {

			   revapi = jQuery('.tp-banner').revolution(
				{
					delay:15000,
					startwidth:1170,
					startheight:520,
					hideThumbs:10,
					fullWidth:"off",
					fullScreen:"on",
					fullScreenOffsetContainer: ".top-bar"
				});

		});	//ready

	</script>
	<!-- END REVOLUTION SLIDER -->
</body>
</html>
