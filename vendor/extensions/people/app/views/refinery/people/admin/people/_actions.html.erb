<ul>
  <% if ::Refinery::People::Admin::PeopleController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.people_admin_people_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_people_admin_person_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::People::Admin::PeopleController.sortable? && ::Refinery::People::Person.many? %>
  <li>
    <%= link_to t('.reorder', :what => "People"),
                 refinery.people_admin_people_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "People"),
                 refinery.people_admin_people_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
