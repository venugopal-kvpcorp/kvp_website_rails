<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(page_text) -%>">
  <span class='title'>
    <%= page_text.key %>

  </span>
  <span class='actions'>
    
    <% link_to refinery_icon_tag("application_go.png"), refinery.page_texts_page_text_path(page_text),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_page_texts_admin_page_text_path(page_text),
         :title => t('.edit') %>
    <% link_to refinery_icon_tag("delete.png"), refinery.page_texts_admin_page_text_path(page_text),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => page_text.key),
        :method => :delete %>
  </span>
</li>
