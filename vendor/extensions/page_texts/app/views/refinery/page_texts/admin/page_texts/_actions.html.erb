<ul>
  <% if ::Refinery::PageTexts::Admin::PageTextsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.page_texts_admin_page_texts_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_page_texts_admin_page_text_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::PageTexts::Admin::PageTextsController.sortable? && ::Refinery::PageTexts::PageText.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Page Texts"),
                 refinery.page_texts_admin_page_texts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Page Texts"),
                 refinery.page_texts_admin_page_texts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
