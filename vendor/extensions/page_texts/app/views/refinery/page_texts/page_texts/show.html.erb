<% content_for :body_content_title do %>
  <%= @page_text.key %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Key</h1>
    <p>
      <%=raw @page_text.key %>
    </p>
  </section>
  <section>
    <h1>Value</h1>
    <p>
      <%=raw @page_text.value %>
    </p>
  </section>
  <section>
    <h1>Page</h1>
    <p>
      <%=raw @page_text.page %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="page_texts">
      <% @page_texts.each do |page_text| %>
        <li>
          <%= link_to page_text.key, refinery.page_texts_page_text_path(page_text) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
