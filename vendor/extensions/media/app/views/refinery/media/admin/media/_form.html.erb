<%= form_for [refinery, :media_admin, @medium] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @medium,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :tags -%>
    <%= f.text_field :tags -%>
  </div>

  <div class='field'>
    <%= f.label :published_at -%>
    <%= f.datetime_select :published_at -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "media/medium" -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :logo_link -%>
    <%= f.text_field :logo_link -%>
  </div>

  <div class='field'>
    <%= f.label :logo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :logo_id,
               :image => @medium.logo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :additional_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :additional_image_id,
               :image => @medium.additional_image,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.media.admin.media.medium'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @medium.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
